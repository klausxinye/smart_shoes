<?xml version="1.0" encoding="utf-8"?> 
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_historychart"
    android:orientation="vertical" >
  
    <Button
        android:id = "@+id/btnRunTime"
        android:layout_x="0dp"
        android:layout_y="25dp"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/transparent"/>
    <Button
        android:id = "@+id/btnWalkTime"
        android:layout_x="165dp"
        android:layout_y="25dp"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/transparent"/>
    <Button
        android:id = "@+id/btnRunStep"
        android:layout_x="0dp"
        android:layout_y="90dp"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/transparent"/>
    <Button
        android:id = "@+id/btnWalkStep"
        android:layout_x="165dp"
        android:layout_y="90dp"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/transparent"/>

    <ImageView
        android:id="@+id/imgChart"
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:layout_x="0dp"
        android:layout_y="180dp"
        android:text="正在载入" 
        android:src="@drawable/historyscale"/>
</AbsoluteLayout>
    
